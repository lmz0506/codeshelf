{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CodeShelf",
  "version": "0.1.12",
  "identifier": "com.codeshelf.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "CodeShelf - 代码书架",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/app-icon-circle.ico",
      "icons/icon.png"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIyQjBGQUJEQkExQzk1OEMKUldTTWxSeTZ2ZnF3SW5Ta1krV3JFQUZ5V2VVUmVqMXlMTlQ2MFBWSVYxaDRTUFFGQlgzT0VaaEkK",
      "endpoints": [
        "https://github.com/en-o/codeshelf/releases/latest/download/latest.json"
      ]
    }
  }
}
